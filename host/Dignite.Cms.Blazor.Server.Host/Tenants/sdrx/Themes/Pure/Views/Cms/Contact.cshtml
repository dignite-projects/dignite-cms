<div id="allmap" class="map"></div>
@section scripts
{
    <script type="text/javascript" src="https://api.map.baidu.com/api?v=2.0&ak=67jMQ5DmYTe1TLMBKFUTcZAR"></script>
    <script type="text/javascript">
        $(function () {
            ShowMap('118.404333,35.098924', 'Shandong Rongxin Plastic Industry Co., Ltd.', 'Room 1013-1017, Building 15B, Dongcheng Jingu, No. 1733 Beijing East Road, Linyi City, Shandong Province', '0539-XXXXX', '', '18');
        });
        function ShowMap(zuobiao, name, addrsee, phone, chuanzhen, zoom) {
            var arrzuobiao = zuobiao.split(',');
            var map = new BMap.Map("allmap");
            map.centerAndZoom(new BMap.Point(arrzuobiao[0], arrzuobiao[1]), zoom);
            map.addControl(new BMap.NavigationControl());
            var marker = new BMap.Marker(new BMap.Point(arrzuobiao[0], arrzuobiao[1]));
            map.addOverlay(marker);
            var infoWindow = new BMap.InfoWindow('<p style="color: #bf0008;">' + name + '</p><p>Address：' + addrsee + '</p><p>Tel：' + phone + '</p>');
            marker.addEventListener("click", function () {
                this.openInfoWindow(infoWindow);
            });
            marker.openInfoWindow(infoWindow);
        }
    </script>
