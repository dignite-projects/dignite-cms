    <script type="text/javascript">
        $(function () {
            ShowMap('118.404333,35.098924', '山东荣欣塑业有限公司', '山东省临沂市北京东路1733号东城金谷15B号楼1013-1017室', '0539-XXXXX', '', '18');
        });
        function ShowMap(zuobiao, name, addrsee, phone, chuanzhen, zoom) {
            var arrzuobiao = zuobiao.split(',');
            var map = new BMap.Map("allmap");
            map.centerAndZoom(new BMap.Point(arrzuobiao[0], arrzuobiao[1]), zoom);
            map.addControl(new BMap.NavigationControl());
            var marker = new BMap.Marker(new BMap.Point(arrzuobiao[0], arrzuobiao[1]));
            map.addOverlay(marker);
            var infoWindow = new BMap.InfoWindow('<p style="color: #bf0008;">' + name + '</p><p>地址：' + addrsee + '</p><p>电话：' + phone + '</p>');
            marker.addEventListener("click", function () {
                this.openInfoWindow(infoWindow);
            });
            marker.openInfoWindow(infoWindow);
        }
    </script>
