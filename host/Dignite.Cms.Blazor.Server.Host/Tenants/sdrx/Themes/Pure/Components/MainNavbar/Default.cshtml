@using Dignite.Cms.Public.Web.Localization;
@using Microsoft.Extensions.Localization;
@inject IStringLocalizer<CmsResource> localizer;
@{
    var language = CultureInfo.CurrentCulture.Name.ToLower();
}

<nav class="navbar navbar-expand-lg bg-white mt-2 mb-3" id="main-navbar">
    <div class="container justify-content-between">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main-navbar-collapse" aria-controls="main-navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="~/@language">
            <img src="/tenants/sdrx/logo.jpg" alt="SHANDONGRONGXIN brand logo" />
        </a>
        <div class="collapse navbar-collapse justify-content-center" id="main-navbar-collapse">
            <ul class="navbar-nav main-navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="~/@language" id="MenuItem_Cms">
                        @localizer["Home"]
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/@language/products" id="MenuItem_Cms">                        
                        @localizer["Products"]
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/@language/about-us/introduction" id="MenuItem_Cms">
                        @localizer["AboutUs"]
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/@language/news" id="MenuItem_Cms">
                        @localizer["News"]
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/@language/service-and-support" id="MenuItem_Cms">
                        @localizer["Services"]
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/@language/contact" id="MenuItem_Cms">
                        @localizer["Contact"]
                    </a>
                </li>
            </ul>
        </div>
        <ul class="navbar-nav">
            <li class="nav-item">
                <div class="btn-group btn-group-sm" role="group" aria-label="@localizer["LanguageSwitch"]">
                    <a href="~/en" class="btn btn-outline-secondary @(language=="en"?"active":"")" role="button">@localizer["English"]</a>
                    <a href="~/zh-hans" class="btn btn-outline-secondary @(language.Equals("zh-hans", StringComparison.OrdinalIgnoreCase)?"active":"")" role="button">@localizer["Chinese"]</a>
                </div>
            </li>
        </ul>
    </div>
</nav>