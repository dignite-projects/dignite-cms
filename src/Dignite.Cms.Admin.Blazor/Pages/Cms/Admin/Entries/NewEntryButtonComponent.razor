@inject NavigationManager Navigation

@if (Section.EntryTypes.Any())
{
    if (Section.EntryTypes.Count == 1)
    {
        <Button Color="Color.Primary" Clicked="()=>OnEntryTypeClick(Section.EntryTypes[0].Id)">@ButtonText</Button>
    }
    else
    {
        <Dropdown>
            <DropdownToggle Color="Color.Primary">
                @ButtonText
            </DropdownToggle>
            <DropdownMenu>
                @foreach (var item in Section.EntryTypes)
                {
                    <DropdownItem Clicked="()=>OnEntryTypeClick(item.Id)">
                        @item.DisplayName
                    </DropdownItem>
                }
            </DropdownMenu>
        </Dropdown>
    }
}