@using Dignite.Cms.Admin.Sites
@using Dignite.Cms.Localization
@using Volo.Abp.BlazoriseUI.Components.ObjectExtending
@using Volo.Abp.Localization;
@inject AbpBlazorMessageLocalizerHelper<CmsResource> LH
@inherits AbpComponentBase

<Validation MessageLocalizer="@LH.Localize">
    <Field>
        <FieldLabel>@L["DisplayName"]</FieldLabel>
        <TextEdit @bind-Text="Entity.DisplayName" Autofocus="true">
            <Feedback>
                <ValidationError />
            </Feedback>
        </TextEdit>
    </Field>
</Validation>
<Validation MessageLocalizer="@LH.Localize">
    <Field>
        <FieldLabel>@L["Name"]</FieldLabel>
        <TextEdit @bind-Text="Entity.Name">
            <Feedback>
                <ValidationError />
            </Feedback>
        </TextEdit>
    </Field>
</Validation>
<Validation MessageLocalizer="@LH.Localize">
    <Field>
        <FieldLabel>@L["HostUrl"]</FieldLabel>
        <TextEdit @bind-Text="Entity.HostUrl">
            <Feedback>
                <ValidationError />
            </Feedback>
        </TextEdit>
        <FieldHelp>@L["SiteHostRequirements"]</FieldHelp>
    </Field>
</Validation>
<Field>
    <FieldLabel>@L["Regions"]</FieldLabel>
    <ListGroup Flush>
        @foreach (var region in AllRegions)
        {
            <ListGroupItem Flex="Flex.JustifyContent.Between.AlignItems.Center">
                <Check TValue="bool" Checked="@Entity.Regions.Any(l=>l.Region.Equals(region.CultureName,StringComparison.OrdinalIgnoreCase))" CheckedChanged="(value)=>OnRegionChanged(region.CultureName,value)">@region.DisplayName</Check>
                <Button Color="Color.Primary" Size="Size.Small" Clicked="()=>OnSetDefault(region.CultureName)">@L["DefaultRegion"]</Button>
            </ListGroupItem>
        }
    </ListGroup>
</Field>
<Field>
    <Check TValue="bool" @bind-Checked="Entity.IsActive">@L["IsActive"]</Check>
</Field>


@code {
    [Parameter] public CreateOrUpdateSiteInputBase Entity { get; set; }
    [Parameter] public IReadOnlyList<LanguageInfo> AllRegions { get; set; }

    public CreateOrUpdateSiteComponent()
    {
        LocalizationResource = typeof(CmsResource);
    }

    void OnRegionChanged(string cultureName, bool value, bool defaultRegion=false)
    {
        if (value)
        {
            Entity.Regions.Add(new CreateOrUpdateRegionInput(defaultRegion, cultureName));
        }
        else
        {
            Entity.Regions.RemoveAll(l => l.Region == cultureName);
        }
    }

    void OnSetDefault(string cultureName)
    {
        foreach (var sl in Entity.Regions)
        {
            if (sl.Region == cultureName)
            {
                sl.IsDefault = true;
            }
            else
            {
                sl.IsDefault = false;
            }
        }
    }
}